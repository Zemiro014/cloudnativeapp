{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/src/**/*.js",
    "!**/src/*.js",
    "!**/src/database/**",
    "!**/node_modules",
    "!**/coverage/**",
    "!**/build/**",
    "!**/test/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  }
}
